{
  "manifest_version": 2,
  "name": "Mistral Chat API",
  "version": "0.1.0",
  "description": "Expose le chat Mistral comme une API locale simplifi√©e.",
  "default_locale": "en",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "nativeMessaging",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["*://chat.mistral.ai/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Mistral Chat API"
  },

  "applications": {
    "gecko": {
      "id": "mistral-chat-api@example.com",
      "strict_min_version": "57.0"
    }
  }
}
